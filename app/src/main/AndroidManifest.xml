<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xyp.meyki_bear.recyclerviewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".adapter.AdapterActivity" />
        <activity android:name=".layout_manager.LayoutActivity" />
        <activity android:name=".decoration.DecorationActivity" />
        <activity android:name=".wheel.WheelActivity" />
        <activity android:name=".ChannelManagerActivity" />
        <activity android:name=".viewpager.ViewPagerActivity"></activity>
        <activity android:name=".review1.ReviewActivity"/>
        <activity android:name=".review2.Review2Activity"/>
    </application>

</manifest>